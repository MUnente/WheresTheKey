@using WebApp.Models

@model WebApp.Models.Reservation
@{
    ViewData["Title"] = "Criar reserva";
}

<form method="POST" class="mt-5">
   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   <div class="row mb-3">
      @Html.LabelFor(model => model.placeId, new { @class = "col-sm-2 col-form-label" })
      <div class="col-sm-10">
         @Html.TextBoxFor(model => model.placeId, new { @class = "form-control", id = "txtPlaceId", })
         @Html.ValidationMessageFor(model => model.placeId, "", new { @class = "text-danger" })
      </div>
   </div>
   <div class="row mb-3">
      @Html.LabelFor(model => model.startDate, new { @class = "col-sm-2 col-form-label" })
      <div class="col-sm-10">
         @Html.TextBoxFor(model => model.startDate, new { @class = "form-control", id = "txtStartDate" })
         @Html.ValidationMessageFor(model => model.startDate, "", new { @class = "text-danger" })
      </div>
   </div>
   <div class="row mb-3">
      @Html.LabelFor(model => model.endDate, new { @class = "col-sm-2 col-form-label" })
      <div class="col-sm-10">
         @Html.TextBoxFor(model => model.endDate, new { @class = "form-control", id = "txtEndDate" })
         @Html.ValidationMessageFor(model => model.endDate, "", new { @class = "text-danger" })
      </div>
   </div>
   <button type="submit">Registrar</button>
</form>